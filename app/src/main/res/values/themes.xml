<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base styl -->
    <style name="Base.Theme.MojePocasi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- sem můžeš dát vlastní atributy -->
    </style>

    <!-- Hlavní styl aplikace -->
    <style name="Theme.MojePocasi" parent="Base.Theme.MojePocasi">
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- sem můžeš dát další úpravy specifické pro tuto appku -->
    </style>
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/azure</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/iconsmall</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MojePocasi</item>
    </style>


</resources>